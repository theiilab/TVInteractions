<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <com.google.android.exoplayer2.ui.PlayerView
        android:id="@+id/video_player"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000"
        app:shutter_background_color="#000000"
        app:controller_layout_id="@layout/playback_media_controller" />

<!--    <ProgressBar-->
<!--        android:id="@+id/progress_bar"-->
<!--        android:layout_width="80dp"-->
<!--        android:layout_height="80dp"-->
<!--        android:layout_centerInParent="true" />-->

    <ImageView
        android:id="@+id/back_btn"
        android:layout_width="@dimen/dimens_24dp"
        android:layout_height="@dimen/dimens_24dp"
        android:src="@drawable/ic_arrow_left"
        android:layout_marginLeft="@dimen/dimens_50dp"
        android:layout_marginTop="@dimen/dimens_50dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="textEnd"
        android:textSize="17sp"
        android:textColor="#fff"
        android:text="Movie Title"
        android:layout_marginRight="@dimen/dimens_50dp"
        android:layout_marginTop="@dimen/dimens_50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/back_btn"/>
</androidx.constraintlayout.widget.ConstraintLayout>
